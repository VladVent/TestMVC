@model List<Person>
@using ContactManager.DAL.Entities

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row>
        <div class="col-12">
           <form asp-action="UploadCSV" enctype="multipart/form-data">
                <input type="file" name="File" />
           <input class ="upload-person" type="submit" />     
           </form>
           
        </div>
        <div class="col-12">
            <partial name="_PersonsList.cshtml" model="@Model" />
        </div>
    </div>
</div>

<script>
  $('th').click(function(){
    var table = $(this).parents('table').eq(0)
    var rows = table.find('tr:gt(0)').toArray().sort(comparer($(this).index()))
    this.asc = !this.asc
    if (!this.asc){rows = rows.reverse()}
    for (var i = 0; i < rows.length; i++){table.append(rows[i])}
})
function comparer(index) {
    return function(a, b) {
        var valA = getCellValue(a, index), valB = getCellValue(b, index)
        return $.isNumeric(valA) && $.isNumeric(valB) ? valA - valB : valA.toString().localeCompare(valB)
    }
}
function getCellValue(row, index){ return $(row).children('td').eq(index).text() }

    $(".update-person").submit(function(e) {
        e.preventDefault();

        $.ajax({
            url: $(this).attr('action'),
            type: 'PUT',
            data: $(this).serialize(),
            success: function (data) {
                alert('Updated');
            },
            error: function() {
                console.log('smth wrong');
            }
        });
    });
    $(".delete-person").click(function(e) {
        e.preventDefault();
        var tr = $(this).closest('.just-tr');
        console.log(tr);

        $.ajax({
            url: $(this).attr('href'),
            type: 'DELETE',
            success: function (data) {
                tr.remove();
            },
            error: function() {
                console.log('smth wrong');
            }
        });
    })
</script>